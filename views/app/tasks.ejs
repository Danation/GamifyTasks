	<div id="tasks" class="col-md-6">
		<h2>Tasks</h2>
		{{#each task in tasks}}
			<div class="row-fluid">
				<div class="col-md-12">
					<div class="panel panel-task">
						<div class="panel-heading">
							<h3 class="panel-title">Task: {{task.name}}</h3>
							<button class="btn btn-default" {{action "deleteTask" task}}><span class="glyphicon glyphicon-remove-circle"></span> Delete</button>
							<button class="btn btn-default" {{action "startEditTask" task}}><span class="glyphicon glyphicon-pencil"></span> Edit</button>
						</div>
						<div class="panel-body" {{bindAttr id="task.normalId"}}>
						
							<span> Red: <strong class="redPoints">{{task.red}}</strong></span>
							<span> Green: <strong class="greenPoints">{{task.green}}</strong></span>
							<span> Blue: <strong class="bluePoints">{{task.blue}}</strong></span>
							<span> Purple: <strong class="purplePoints">{{task.purple}}</strong></span>
							<button class="btn btn-primary pull-right" {{action "finishTask" task wallet.firstObject}}><span class="glyphicon glyphicon-ok"></span> Done</button>
						</div>
						<div class="panel-body" {{bindAttr id="task.editId"}} hidden>
							<div>Name: {{input type='text' value=task.name name='updateTaskName'}}</div>
							
							<span> Red: {{view Gamify.NumberField min='0' max='999' step='1' value=task.red name='updateTaskRed' maxlength='3' class='redPoints inputPoints' }} </span>
							<span> Green: {{view Gamify.NumberField min='0' max='999' step='1' value=task.green name='updateTaskGreen' maxlength='3' class='greenPoints inputPoints' }} </span>
							<span> Blue: {{view Gamify.NumberField min='0' max='999' step='1' value=task.blue name='updateTaskBlue' maxlength='3' class='bluePoints inputPoints' }} </span>
							<span> Purple: {{view Gamify.NumberField min='0' max='999' step='1' value=task.purple name='updateTaskPurple' maxlength='3' class='purplePoints inputPoints' }} </span>
							<button class="btn btn-primary pull-right" {{action "finishEditTask" task wallet.firstObject}}><span class="glyphicon glyphicon-ok"></span> Save</button>
						</div>
					</div>				
				</div>
			</div>
		{{/each}}
		<div class="row-fluid">
			<div class="col-md-12">
				<div class="panel panel-add-task">
					<div class="panel-heading">
						<h3 class="panel-title">Add New Task</h3>
					</div>
					<div class="panel-body">
						<form id="newTaskForm" {{action "addTask" on="submit"}}>
							<div>Name: {{input type='text' value=newTitle name='newTaskName'}}</div>
		
							<span> Red: {{view Gamify.NumberField min='0' max='999' step='1' value=newRed name='newTaskRed' maxlength='3' class='redPoints inputPoints' }} </span>
							<span> Green: {{view Gamify.NumberField min='0' max='999' step='1' value=newGreen name='newTaskGreen' maxlength='3' class='greenPoints inputPoints' }} </span>
							<span> Blue: {{view Gamify.NumberField min='0' max='999' step='1' value=newBlue name='newTaskBlue' maxlength='3' class='bluePoints inputPoints' }} </span>
							<span> Purple: {{view Gamify.NumberField min='0' max='999' step='1' value=newPurple name='newTaskPurple' maxlength='3' class='purplePoints inputPoints' }} </span>
							<button class="btn btn-primary pull-right" type='submit'>
								<span class="glyphicon glyphicon-plus"></span> Add
							</button>
						</form>
						<ul id="newTaskFormError"></ul>
					</div>
				</div>			
			</div>
		</div>
	</div>
